
@page "/onboarding"
@using System.Collections.Generic
@using System.Linq
@using ClickPay.Wallet.Core.Services
@using ClickPay.Wallet.Core.Blockchain
@using ClickPay.Wallet.Core.Wallet
@using Microsoft.Extensions.Logging
@using Microsoft.AspNetCore.Components
@inject LocalizationService Loc
@inject WalletMnemonicService Mnemonics
@inject WalletKeyService WalletKeys
@inject WalletProviderRegistry ProviderRegistry
@inject NavigationManager Navigation
@inject ILogger<WalletOnboarding> Logger

<PageTitle>@Loc.T("WalletOnboardingTitle")</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card shadow-lg">
                <div class="card-body text-center">
                    <h2 class="mb-4">@Loc.T("WalletWelcomeTitle")</h2>
                    <p class="mb-4">@Loc.T("WalletWelcomeDescription")</p>
                    <div class="d-grid gap-3">
                        <button class="btn btn-success btn-lg" @onclick="ShowCreateWallet">@Loc.T("CreateWalletButton")</button>
                        <button class="btn btn-primary btn-lg" @onclick="ShowRestoreWallet">@Loc.T("RestoreWalletButton")</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (showCreateWallet)
    {
        <div class="row justify-content-center mt-5">
            <div class="col-12 col-md-8">
                <div class="card border-success">
                    <div class="card-body">
                        <h4 class="card-title text-success">@Loc.T("CreateWalletTitle")</h4>
                        <p>@Loc.T("CreateWalletInstructions")</p>
                        <div class="alert alert-warning">
                            <strong>@Loc.T("PassphraseWarning")</strong>
                        </div>
                        <div class="mb-3">
                            <textarea class="form-control" rows="3" readonly>@generatedPassphrase</textarea>
                        </div>
                        <button class="btn btn-success" @onclick="ConfirmCreateWallet">@Loc.T("ConfirmCreateWalletButton")</button>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (showRestoreWallet)
    {
        <div class="row justify-content-center mt-5">
            <div class="col-12 col-md-8">
                <div class="card border-primary">
                    <div class="card-body">
                        <h4 class="card-title text-primary">@Loc.T("RestoreWalletTitle")</h4>
                        <p>@Loc.T("RestoreWalletInstructions")</p>
                        <div class="mb-3">
                            <textarea class="form-control" rows="3" @bind="restorePassphrase"></textarea>
                        </div>
                        <button class="btn btn-primary" @onclick="ConfirmRestoreWallet">@Loc.T("ConfirmRestoreWalletButton")</button>
                        @if (restoreError != null)
                        {
                            <div class="alert alert-danger mt-3">@restoreError</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="row justify-content-center mt-5">
            <div class="col-12 col-md-8">
                <div class="card border-info">
                    <div class="card-body">
                        <div class="alert alert-success">@successMessage</div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool showCreateWallet = false;
    private bool showRestoreWallet = false;
    private string? generatedPassphrase;
    private string? restorePassphrase;
    private string? restoreError;
    private string? successMessage;

    private void ShowCreateWallet()
    {
        showCreateWallet = true;
        showRestoreWallet = false;
        generatedPassphrase = GeneratePassphrase();
        successMessage = null;
        restoreError = null;
    }
    private void ShowRestoreWallet()
    {
        showRestoreWallet = true;
        showCreateWallet = false;
        restoreError = null;
        successMessage = null;
    }
    private async Task ConfirmCreateWallet()
    {
        if (string.IsNullOrWhiteSpace(generatedPassphrase))
        {
            return;
        }

        if (!Mnemonics.ValidateMnemonic(generatedPassphrase))
        {
            Logger?.LogWarning("Generated mnemonic failed validation.");
            restoreError = Loc.T("RestoreWalletError");
            return;
        }

        await PersistVaultAsync(generatedPassphrase.Trim(), string.Empty, Loc.T("WalletCreatedSuccess"));
    }
    private async Task ConfirmRestoreWallet()
    {
        if (IsValidPassphrase(restorePassphrase))
        {
            var trimmed = restorePassphrase!.Trim();
            await PersistVaultAsync(trimmed, string.Empty, Loc.T("WalletRestoredSuccess"));
        }
        else
        {
            restoreError = Loc.T("RestoreWalletError");
            successMessage = null;
        }
    }
    private string GeneratePassphrase()
    {
        return Mnemonics.GenerateMnemonic();
    }
    private bool IsValidPassphrase(string? passphrase)
    {
        return Mnemonics.ValidateMnemonic(passphrase);
    }

    private async Task PersistVaultAsync(string mnemonic, string passphrase, string success)
    {
        var vault = BuildVault(mnemonic, passphrase);

        await WalletKeys.SaveVaultAsync(vault);

        successMessage = success;
        restoreError = null;

        NavigateToDashboard();
    }

    private WalletVault BuildVault(string mnemonic, string passphrase)
    {
        var trimmed = mnemonic.Trim();
        var wordCount = trimmed.Split(' ', StringSplitOptions.RemoveEmptyEntries).Length;

        var chains = new Dictionary<string, WalletVaultChainState>(StringComparer.OrdinalIgnoreCase);

        if (ProviderRegistry is not null)
        {
            try
            {
                foreach (var network in ProviderRegistry.GetRegisteredNetworks())
                {
                    var chainKey = WalletChains.ResolveChainKey(network.ToString());
                    if (!chains.ContainsKey(chainKey))
                    {
                        chains.Add(chainKey, WalletVaultChainState.Default);
                    }
                }
            }
            catch (Exception ex)
            {
                Logger?.LogWarning(ex, "Unable to enumerate wallet providers while building vault. Falling back to defaults.");
            }
        }

        if (!chains.ContainsKey(WalletChains.Bitcoin))
        {
            chains[WalletChains.Bitcoin] = WalletVaultChainState.Default;
        }

        if (!chains.ContainsKey(WalletChains.Solana))
        {
            chains[WalletChains.Solana] = WalletVaultChainState.Default;
        }

        if (!chains.ContainsKey(WalletChains.Ethereum))
        {
            chains[WalletChains.Ethereum] = WalletVaultChainState.Default;
        }

        return new WalletVault
        {
            Mnemonic = trimmed,
            Passphrase = passphrase,
            WordCount = wordCount,
            AccountIndex = 0,
            CreatedAtUtc = DateTime.UtcNow,
            Chains = chains
        };
    }

    private void NavigateToDashboard()
    {
        try
        {
            var assets = WalletAssetHelper.GetVisibleAssets().ToList();
            if (assets.Count > 0)
            {
                var primary = assets[0];
                var route = $"/wallet/{WalletAssetHelper.GetRouteSegment(primary)}";
                Navigation.NavigateTo(route, forceLoad: true);
            }
            else
            {
                Navigation.NavigateTo("/setup", forceLoad: true);
            }
        }
        catch (Exception ex)
        {
            Logger?.LogWarning(ex, "Automatic post-onboarding navigation failed. Redirecting to setup.");
            Navigation.NavigateTo("/setup", forceLoad: true);
        }
    }
}
