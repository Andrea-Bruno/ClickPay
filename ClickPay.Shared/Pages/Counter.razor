@page "/counter"
@using ClickPay.Wallet.Core.Services
@inject LocalizationService Loc

<PageTitle>@Loc.T("CounterTitle")</PageTitle>

<h1>@Loc.T("CounterHeading")</h1>

<p role="status">@Loc.T("CurrentCount") @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">@Loc.T("ClickMe")</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
